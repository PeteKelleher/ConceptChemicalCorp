<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <template id="report_purchasequotation_document_inherited_cc" inherit_id="purchase.report_purchasequotation_document">
<!--       	   <xpath expr="//t[@t-call='web.external_layout']" position="before">-->
<!--          		<t t-set="is_poq_doc" t-value="True"/>-->
<!--           </xpath>-->
		   <xpath expr="//t/div/h2" position="replace">
		   		<h2 class="text-center">Request for Quote: Open Order <span t-field="o.name"/></h2>
		   </xpath>
		   <xpath expr="//t/div/table" position="before">
		   		<div id="informations" class="row mt32 mb32">
		   			<div t-if="o.incoterm_id" class="col-3 bm-2">
	                    <strong>Incoterms:</strong>
	                    <p t-field="o.incoterm_id" class="m-0"/>
	                </div>
		   		</div>
		   </xpath>
           <xpath expr="//t/t[2][@t-set='address']" position="replace">
                <t t-set="information_block">
                    <t t-set="address">
                        <strong>Supplier Address:</strong>
                        <div t-field="o.partner_id" 
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                    </t>
                </t>
            </xpath>
            <xpath expr="//t/t[@t-if='o.dest_address_id']" position="replace">
                <t t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                    <t t-set="information_block">
                    	<br/>
                        <strong>Warehouse address:</strong>
                        <div t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id" 
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;:
                                           [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, 
                                           &quot;phone_icons&quot;: True}"/>
                        </div>
                    </t>
                </t>
            </xpath>
           <!-- <xpath expr="//table/tbody/tr/td[1]" position="replace">
                <td>
                    <span t-field="order_line.product_id.name"/>
                    <span t-field="order_line.product_id.x_studio_field_xYGHQ"/>
                </td>              
            </xpath>
            <xpath expr="//t/div/table/thead/tr/th[2]" position="replace">
            </xpath>
            <xpath expr="//t/div/table/tbody/tr/td[2]" position="replace">
            </xpath>-->
            <xpath expr="//t/div/table" position="replace">
            	<table class="table table-sm">
	                <thead>
	                    <tr>
	                        <th><strong>Product Name</strong></th>
	                        <th><strong>Pack Size</strong></th>
<!--	                        <th><strong>INCI Name</strong></th-->
	                        <th><strong>Batch Number</strong></th>
<!--	                        <th class="text-center"><strong>Expected Date</strong></th-->
	                        <th class="text-right"><strong>Unit Quantity</strong></th>
	                        <th class="text-right"><strong>UOM</strong></th>
	                        <th class="text-right"><strong>Date Required</strong></th>
	                    </tr>
	                </thead>
	                <tbody>
	                    <tr t-foreach="o.order_line" t-as="order_line">
	                        <td>
	                            <span t-field="order_line.product_id.name"/>
	                        </td>
	                        <td>
	                        </td>
	                       <!-- <td> 
								<span t-field="order_line.product_id.x_studio_field_xYGHQ"/>	                        	
	                        </td>-->
	                        <td>
	                        </td>
	                        <!--<td class="text-center">
	                            <span t-field="order_line.date_planned"/>
	                        </td>-->
	                        <td class="text-right">
	                            <span t-field="order_line.product_qty"/>
	                        </td>
	                        <td class="text-right">
	                            <span t-field="order_line.product_uom" groups="uom.group_uom"/>
	                        </td>
	                        <td class="text-right">
	                        	<span t-field="order_line.date_planned" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
	                        </td>
	                    </tr>
	                </tbody>
	            </table>
            </xpath>
            <xpath expr="//div/h2" position="after">
                <p class="text-right"><h8>Order Date :<span t-field="o.date_order" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/></h8></p>
            </xpath>
        </template>
       
</odoo>